# MySQL5.7 configure file. #
# MySQL_version 5.7.18
# Version 1.1
# Date    2017-08-08

# The MySQL server
[mysqld]
# basic settings
port                                = 3306                                           # modify value
user                                = work
datadir                             = /home/work/data/mysql3306                      # modify value
tmpdir                              = /home/work/data/tmp                            # modify value
sql_mode                            = 'NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION'
character-set-server                = utf8mb4
explicit_defaults_for_timestamp     = on
slave-load-tmpdir                   = /home/work/data/tmp                            # modify value
socket                              = mysql.sock                                     # modify value
max_allowed_packet                  = 16M
read_only                           = 0


# table cache performance settings
table_open_cache                    = 4096
table_definition_cache              = 4096


# session memory settings
join_buffer_size                    = 16M
sort_buffer_size                    = 16M
read_buffer_size                    = 16M
read_rnd_buffer_size                = 32M
max_tmp_tables                      = 256
tmp_table_size                      = 128M
max_heap_table_size                 = 128M
thread_cache_size                   = 64


# query cache settings
#query_cache_size                    = 256M
#query_cache_limit                   = 8M
#query_cache_type                    = 1


# connection settings
interactive_timeout                 = 1800
wait_timeout                        = 1800
lock_wait_timeout                   = 1800
skip-name-resolve                   = 1
max_user_connections                = 5000
max_connections                     = 10000
max_connect_errors                  = 99999999


# log settings
log_timestamps                      = 1
long_query_time                     = 1
slow-query-log                      = 1
slow-query-log-file                 = slow.log
expire_logs_days                    = 10
log-slave-updates                   = 0


# innodb settings
default-storage-engine              = InnoDB
innodb_buffer_pool_size             = 1G                        # modify value
innodb_data_file_path               = ibdata1:10M:autoextend
innodb_flush_log_at_trx_commit      = 1
innodb_log_buffer_size              = 8M
innodb_log_file_size                = 1300M
innodb_log_files_in_group           = 3
innodb_max_dirty_pages_pct          = 90
innodb_lock_wait_timeout            = 20
innodb_file_per_table               = 1
innodb_flush_method                 = O_DIRECT
innodb_support_xa                   = 1
innodb_io_capacity                  = 500
innodb_buffer_pool_instances        = 10
innodb_undo_tablespaces             = 3
innodb_open_files                   = 4096
innodb_file_format                  = Barracuda
innodb_file_format_max              = Barracuda
innodb_purge_threads                = 4
innodb_autoinc_lock_mode            = 2
innodb_read_io_threads              = 8
innodb_write_io_threads             = 8
innodb_strict_mode                  = 1
innodb_print_all_deadlocks          = 1
innodb_buffer_pool_dump_at_shutdown = 1


# replication settings
skip-slave-start                    = 1
server-id                           = 95273306                                  # modify value
log-bin                             = log-bin
binlog_format                       = ROW
binlog-rows-query-log-events        = 1
relay-log                           = relay-bin
log-error                           = error.log
binlog_row_image                    = MINIMAL
sync_binlog                         = 1
relay_log_recovery                  = 1
slave-parallel-type                 = LOGICAL_CLOCK
slave-parallel-workers              = 16
master_info_repository              = TABLE
relay_log_info_repository           = TABLE
slave_net_timeout                   = 600
gtid-mode                           = on
enforce-gtid-consistency            = 1 

[client]
port                                = 3306                                      # modify value
socket                              = mysql.sock                                # modify value
no-auto-rehash
