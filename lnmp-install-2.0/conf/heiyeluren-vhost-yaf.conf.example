## vhost server ###
server {
    listen       80;
    #listen       443 ssl;

    #ssl_certificate     /home/work/nginx/conf/ssl/server.crt;
    #ssl_certificate_key /home/work/nginx/conf/ssl/server.key;

    ## open cookie userid 
    userid on;
    #userid_name heiyeuren;
    #userid_domain heiyeuren.com;
    userid_name uid;
    userid_domain heiyeuren.com;
    userid_path /;
    userid_expires 365d;

    server_name  api.heiyeluren.com;
    index        index.php index.html index.htm;
    access_log   /home/work/logs/nginx/api.heiyeluren.com.access.log logstash-app;

    root '/home/work/www/run/yaf-framework-demo/webroot';

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    location ~ .*\.(php|php5)?$ {
        fastcgi_pass    127.0.0.1:9000;
        fastcgi_index   index.php;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_param  SCRIPT_FILENAME    $document_root$fastcgi_script_name;
        include         fastcgi_params;

    }
 
    location = /favicon.ico {
        return 204;
        access_log     off;
        log_not_found  off;
    }

    location ~* .*\.(gif|jpg|jpeg|png|bmp|swf|ico)$ {
    }

    location ~* .*\.(js|css)?$ {
        access_log   off;
        expires      12h;
    }

    location ~* /\.ht {
        deny  all;
    }
}

